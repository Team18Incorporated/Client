<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:alpha=".9">


    <Button
        android:text="Ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/ready_Button"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:text=" card(s) by checking the box in the ones you do not want
        "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/numCardText"
        android:layout_alignBottom="@+id/numCardText"
        android:layout_toEndOf="@+id/numCardText"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Discard up to "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/textView"
        android:layout_above="@+id/destination_recyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp"
        android:paddingLeft="90dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numCardText"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/destination_recyclerView"
        android:layout_above="@+id/ready_Button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        />
</RelativeLayout>