<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_black"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:rotation="90"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_red"
        android:id="@+id/imageView2"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginEnd="10dp"
        android:rotation="90"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_blue"
        android:id="@+id/imageView3"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:rotation="90"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_green"
        android:id="@+id/imageView5"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView3"
        android:rotation="90"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_yellow"
        android:id="@+id/imageView4"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView5"
        android:rotation="90"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_purple"
        android:id="@+id/imageView6"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView4"
        android:rotation="90"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_white"
        android:id="@+id/imageView7"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView6"
        android:rotation="90"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_orange"
        android:id="@+id/imageView8"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView7"
        android:rotation="90"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/card_rainbow"
        android:id="@+id/imageView9"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView8"
        android:rotation="90"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:text="Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginTop="12dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/black" />

    <TextView
        android:text="City1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_toStartOf="@+id/textView7"
        android:id="@+id/route_city1_text"
        android:textColor="@android:color/black" />

    <TextView
        android:text="City2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/route_city2_text"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:text="to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView8"
        android:textColor="@android:color/black"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/black_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="6dp" />

    <TextView
        android:text="Length: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView11"
        android:textColor="@android:color/black"
        android:layout_below="@+id/route_city1_text"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:text="Any"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/route_color_text"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/imageView8" />

    <TextView
        android:text="Color:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_marginEnd="9dp" />

    <TextView
        android:text="#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/route_length_text"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toStartOf="@+id/imageView5" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_button"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView4" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_button"
        android:layout_alignBaseline="@+id/done_button"
        android:layout_alignBottom="@+id/done_button"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginStart="7dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/red_spinner"
        android:layout_width="40dp"
        android:layout_marginEnd="9dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/blue_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/textView11" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/yellow_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/textView8" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/purple_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_marginEnd="9dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/white_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView7"
        android:layout_alignEnd="@+id/textView13" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/orange_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginStart="8dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/wild_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView9"
        android:layout_alignEnd="@+id/imageView9"
        android:layout_marginEnd="9dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/green_spinner"
        android:layout_width="40dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignStart="@+id/done_button" />

</RelativeLayout>