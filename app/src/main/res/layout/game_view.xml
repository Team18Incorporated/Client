<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_height="30dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/gameName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:text="GAME NAME"
            android:layout_centerVertical="true"/>

        <Button
            android:text="PLAY"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/play_button"
            style="@android:style/Widget.Button"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/maxNumPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/play_button"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:text="/5 Players"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/currentNumPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/maxNumPlayers"
            android:textSize="12sp"
            android:text="#"
            android:layout_alignBottom="@id/maxNumPlayers"/>

        <ImageView
            android:id="@+id/rectimage"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:src="@drawable/rectangle"/>




    </RelativeLayout>



</RelativeLayout>